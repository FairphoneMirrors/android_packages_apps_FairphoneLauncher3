<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#00000000">

<com.fairphone.fplauncher3.oobe.animation.CameraTutorialAnimationView
    android:id="@+id/cameraAnimationView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
>
    <TextView
        style="@style/OOBETitle"
        android:id="@+id/cameraAnimationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/oobe_camera_button_title"
        android:layout_marginTop="22dp"/>

    <TextView
        style="@style/OOBEText"
        android:id="@+id/cameraAnimationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/oobe_camera_button_text" />

</com.fairphone.fplauncher3.oobe.animation.CameraTutorialAnimationView>

</FrameLayout>